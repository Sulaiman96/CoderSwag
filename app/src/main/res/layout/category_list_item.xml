<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="150dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
            <!--android:layout_marginTop="8dp"/>-->
    <TextView
            android:text="HATS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName" app:layout_constraintEnd_toEndOf="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="@+id/categoryImage" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/categoryImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/categoryImage" android:fontFamily="serif-monospace"
            android:textSize="36sp" android:textAlignment="center" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>